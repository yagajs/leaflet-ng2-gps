{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./lib",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom", "es2015.iterable", "es2015.promise"]
    },
    "exclude": [
        "node_modules",
        "typings",
        "lib",
        "test",
        "browser-test",
        "coverage",
        "example",
        "d.ts",
        "release",
        "ts/*.ngfactory.ts"
    ]
}
